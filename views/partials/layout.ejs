<!DOCTYPE html>
<html lang="fr">
<%
const pageName = new Map()
    .set("index", "Accueil")
    .set("projets", "Projets")
    .set("stream", "Stream")
    .set("membres", "Membres")
    .set("recrutement", "Recrutement")
    .set("aboutus", "A Propos")
    .set("error", "Erreur 404")
%>
<head>
    <meta charset="UTF-8"/>
    <title>TMS - <%=pageName.get(body)%></title>

    <link rel="icon" type="image/png" href="./logo.png" />
    <link rel="stylesheet" type="text/css" href="./styles/index.css" />

    <!-- ALL THE SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://unpkg.com/@barba/core"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.3.4/gsap.min.js"></script>
    <script src="https://embed.twitch.tv/embed/v1.js"></script>
    <script type="text/javascript" src="./scripts/dynamic.js"></script>
    <script type="text/javascript" src="./scripts/barba.js" defer></script>
</head>

<body data-barba="wrapper">
    <div class="loader"></div>
    <div class="background"></div>

    <%-include("header")%>
    <br/>

    <div id="main" data-barba="container" data-barba-namespace="<%=body%>">
        <%-include(`../pages/${body}`)%>
    </div>

    <br/>
    <%-include("footer")%>
</body>
</html>