<link rel="stylesheet" type="text/css" href="./styles/membres.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="membres">
<h1>Le Staff</h1>
<%  
    for(const membre of admins){
%>
        <table class="membre">
            <tr>
                <td class="p-2">
                    <img src="<%=membre.image ? membre.image : "./logo.png"%>" width="80px" class="rounded-circle"/>
                </td>
                <td class="p-2">
                    <h2><%=membre.pseudo%></h2>
                    <%if(membre.twitter){%>
                        &nbsp;
                        <a href="<%=membre.twitter%>" target="_blank"><i class="fa">&#xf099;</i></a>
                    <%}%>
                    <%if(membre.facebook){%>
                        &nbsp;
                        <a href="<%=membre.facebook%>" target="_blank"><i class="fa">&#xf082;</i></a>
                    <%}%>
                    <%if(membre.instagram){%>
                        &nbsp;
                        <a href="<%=membre.instagram%>" target="_blank"><i class="fa">&#xf16d;</i></a>
                    <%}%>
                    <%if(membre.twitch){%>
                        &nbsp;
                        <a href="<%=membre.twitch%>" target="_blank"><i class="fa">&#xf1e8;</i></a>
                    <%}%>
                </td>
                <td class="p-2"> 
                    <%for(const role of membre.roles){%>
                        <small><em><%=role%></em></small><br/>
                    <%}%>
                </td>
            </tr>
        </table>
<%
    }
%>
<br/><br/><br/>


<h1>Les Joueurs</h1>
<%  
    for(const membre of joueurs){
%>
        <table class="membre">
            <tr>
                <td class="p-2">
                    <img src="<%=membre.image ? membre.image : "./logo.png"%>" width="80px" class="rounded-circle"/>
                </td>
                <td class="p-2">
                    <h2><%=membre.pseudo%></h2>
                    <%if(membre.twitter){%>
                        &nbsp;
                        <a href="<%=membre.twitter%>" target="_blank"><i class="fa">&#xf099;</i></a>
                    <%}%>
                    <%if(membre.facebook){%>
                        &nbsp;
                        <a href="<%=membre.facebook%>" target="_blank"><i class="fa">&#xf082;</i></a>
                    <%}%>
                    <%if(membre.instagram){%>
                        &nbsp;
                        <a href="<%=membre.instagram%>" target="_blank"><i class="fa">&#xf16d;</i></a>
                    <%}%>
                    <%if(membre.twitch){%>
                        &nbsp;
                        <a href="<%=membre.twitch%>" target="_blank"><i class="fa">&#xf1e8;</i></a>
                    <%}%>
                </td>
                <td class="p-2"> 
                    <%if(membre.pseudo.length > 9){%><br/><%}%>
                    <%for(const role of membre.roles){%>
                        <small><em><%=role%></em></small><br/>
                    <%}%>
                </td>
            </tr>
        </table>
<%
    }
%>
</div>